{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
    },
    "target": "esnext",
    "module": "commonjs",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "jest",
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "es2015",
      "es2016",
      "es2017"
    ],
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "functions",
  ]
}
