{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
    },
    "target": "es2016",
    "module": "esnext",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015",
      "es2016",
      "es2017"
    ],
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "electron",
    "functions",
  ]
}
